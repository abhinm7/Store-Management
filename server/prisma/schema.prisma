generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  address  String
  role     String @default("NORMAL") // ADMIN, NORMAL, STORE_OWNER

  // Relations
  ratings Rating[]
  stores  Store[] // If they are a Store Owner
}

model Store {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  address String
  ownerId Int
  owner   User     @relation(fields: [ownerId], references: [id])
  ratings Rating[]
}

model Rating {
  id      Int   @id @default(autoincrement())
  value   Int // 1 to 5
  userId  Int
  user    User  @relation(fields: [userId], references: [id])
  storeId Int
  store   Store @relation(fields: [storeId], references: [id])
}
